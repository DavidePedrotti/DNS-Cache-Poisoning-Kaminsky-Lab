options {
	directory "/var/cache/bind";

    dnssec-validation no;
    dnssec-enable no;
    dump-file "/var/cache/bind/dump.db";

    allow-query { any; };
    allow-query-cache { any; };
    allow-recursion { any; };
    filter-aaaa-on-v4 yes;
    filter-aaaa { any; };

	listen-on-v6 { none; };
};