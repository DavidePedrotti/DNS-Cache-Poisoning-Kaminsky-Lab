options {
	directory "/var/cache/bind";
    recursion yes;

    dnssec-validation no;
    dnssec-enable no;
    dump-file "/var/cache/bind/dump.db";
    query-source port 12345;

    allow-query { any; };
    allow-query-cache { any; };
    allow-recursion { any; };
    filter-aaaa-on-v4 yes;
    filter-aaaa { any; };

    listen-on-v6 { none; };
    send-cookie no;
    require-server-cookie no;
};