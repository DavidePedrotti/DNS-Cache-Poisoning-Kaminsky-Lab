options {
	directory "/var/cache/bind";

    forward only;
    forwarders {
        10.0.0.50;
    };

    dnssec-validation no;
    dnssec-enable no;
    query-source port 12345;

    allow-query { any; };
    allow-query-cache { any; };
    allow-recursion { any; };

	listen-on-v6 { none; };
    send-cookie no;
    require-server-cookie no;
};